<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mQRCodeImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:layout_marginTop="100dp"
        android:src="@drawable/icon_default_bg" />

    <TextView
        style="@style/mContentSubStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_activity_padding_16"
        android:text="@string/mQrCodeAlipayGuideHintLabel" />

    <TextView
        android:id="@+id/mQRCodePriceLabel"
        style="@style/mContentBigStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_activity_padding_8"
        android:text="" />
</LinearLayout>
